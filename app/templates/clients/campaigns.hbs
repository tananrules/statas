<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-9">
    <h2>Clients</h2>
    <ol class="breadcrumb">
      <li>
        {{#link-to 'dashboard'}}Home{{/link-to}}
      </li>
      <li>
      {{#link-to 'clients'}}Clients{{/link-to}}
      </li>
      <li class="active">
        <strong>Campaigns</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-3">
    <div class="title-action">
      <button type="button" class="btn btn-w-m btn-primary pull-right" data-toggle="modal" data-target="#addCampaignModal">Add Campaign<span class="right">{{fa-icon 'angle-right'}}</span></button>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content">
      <div class="row">
        <div class="col-lg-12">
          <div class="btn-group" role="group">
            {{#link-to 'clients.campaigns' tagName='button' class='btn btn-w-m btn-default'}}Campaigns{{/link-to}}
            {{#link-to 'clients.offers' tagName='button' class='btn btn-w-m btn-default'}}Offers{{/link-to}}
          </div>
        </div>
        <br/><br/><br/>
        <div class="col-lg-12">
          <div class="ibox float-e-margins">
            <div class="ibox-title">
              <h5>All Campaigns</h5>
            </div>
            <div class="ibox-content">
              <table class="table">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Offers</th>
                    <th>Influencers</th>
                    <th>Budget</th>
                    <th>Spent</th>
                    <th>Spend Left</th>
                    <th>Reach</th>
                    <th>Clicks</th>
                    <th>Goal</th>
                    <th>Added</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each model as |campaign index|}}
                  <tr>
                    <td>{{addOne index}}</td>
                    <td>{{campaign.name}}</td>
                    <td></td>
                    <td></td>
                    <td>{{campaign.budget}}</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td class="font-medium">{{campaign.timeRemaining}}
                      <div class="font-small">days hour min</div> 
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{outlet}}

{{add-new-campaign-modal 
  form=form 
  store=store
  model=model
}}