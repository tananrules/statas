<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-9">
    <h2>Clients</h2>
    <ol class="breadcrumb">
      <li>
        {{#link-to 'dashboard'}}Home{{/link-to}}
      </li>
      <li>
      {{#link-to 'clients'}}Clients{{/link-to}}
      </li>
      <li class="active">
        <strong>Campaigns</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-3">
    <div class="title-action">
      <button type="button" class="btn btn-w-m btn-primary pull-right" data-toggle="modal" data-target="#addCampaignModal">Add Campaign<span class="right">{{fa-icon 'angle-right'}}</span></button>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content">
      <div class="row">
        <div class="col-lg-12">
          <div class="btn-group" role="group">
            {{#link-to 'clients.campaigns' tagName='button' class='btn btn-w-m btn-default'}}Campaigns{{/link-to}}
            {{#link-to 'clients.offers' tagName='button' class='btn btn-w-m btn-default'}}Offers{{/link-to}}
          </div>
        </div>
        <br/><br/><br/>
        <div class="col-lg-12">
          {{top-offers-table-component 
            model=model 
            showActions=true
            title='Campaigns'
          }}
        </div>
      </div>
    </div>
  </div>
</div>


{{outlet}}


<div class="modal inmodal fade" id="addCampaignModal" tabindex="-1" role="dialog"  aria-hidden="true">
  <div class="modal-dialog">
    <form role="form" {{action 'createNewCampaign' on='submit'}}>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h5 class="modal-title">ADD NEW CAMPAIGN</h5>
        {{!-- <small class="font-bold">Lorem Ipsum is simply dummy text of the printing and typesetting industry.</small> --}}
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group"><label>Campaign Name<span class="required"> *</span></label> 
              {{input class="form-control" value=form.campaignName required="true"}}
            </div>
            <div class="form-group"><label>Campaign Type<span class="required"> *</span></label> 
              {{#x-select value=selectedCampaignType action="selectCampaignType" class="form-control m-b"}}
                {{#x-option value='post'}}Promote Post{{/x-option}}
                {{#x-option value='video'}}Promote Video{{/x-option}}
                {{#x-option value='account'}}Promote Account{{/x-option}}
                {{#x-option value='website'}}Promote Website{{/x-option}}
              {{/x-select}}
            </div>
            <div class="form-group"><label>Budget<span class="required"> *</span></label> 
              {{input class="form-control" value=form.budget required="true" placeholder='$'}}
            </div>
            <div class="form-group"><label>Description<span class="required"> *</span></label> 
              {{textarea class="form-control" value=form.description required="true" rows=4}}
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" type="submit">Create Campaign</button>
      </div>
    </div>
    </form>
  </div>
</div>