<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-9">
    <h2>{{model.name}}</h2>
    <ol class="breadcrumb">
      <li>
        {{#link-to 'dashboard'}}Home{{/link-to}}
      </li>
      <li class="active">
        {{#link-to 'clients'}}Clients{{/link-to}}
      </li>
      <li class="active">
        <strong>{{model.name}}</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-3">
    <div class="title-action">
      <button type="button" class="btn btn-w-m btn-primary pull-right" data-toggle="modal" data-target="#addClientModal">Add Client<span class="right">{{fa-icon 'angle-right'}}</span></button>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content">
      <div class="row">
        <div class="col-lg-4">
            {{!-- {{#link-to 'clients.campaigns' tagName='button' class='btn btn-w-m btn-default'}}Campaigns{{/link-to}}
            {{#link-to 'clients.offers' tagName='button' class='btn btn-w-m btn-default'}}Offers{{/link-to}} --}}
            <div class="btn-group">
              <h4><a>Active</a> | <a>Inactive</a> | <a>All</a></h4>
            </div>
        </div>
        <div class="col-lg-4">
          <form>
            <input type="text" placeholder="Search Campaigns " class="form-control">
          </form>
        </div>
        <div class="col-lg-4">
          <div class="btn-group pull-right">
            {{#link-to 'clients.index' tagName='button' class='btn btn-sm btn-default'}}Clients{{/link-to}}
            {{#link-to 'clients.campaigns' tagName='button' class='btn btn-sm btn-default'}}Campaigns{{/link-to}}
            {{#link-to 'clients.offers' tagName='button' class='btn btn-sm btn-default'}}Offers{{/link-to}}
          </div>
        </div>
          <br/><br/><br/>
        <div class="col-lg-4">
          <div class="ibox float-e-margins">
            <div class="ibox-title">
              <h5>Info</h5>
            </div>
            <div class="ibox-content">
              <div class="row">
                <div class="col-sm-4">
                  Advertiser
                </div>
                <div class="col-sm-8">
                  <strong>{{model.name}}</strong>
                </div>
                <div class="col-sm-4">
                  Address
                </div>
                <div class="col-sm-8">
                  <strong>{{model.address}}</strong>
                </div>
                <div class="col-sm-4">
                  Suite  
                </div>
                <div class="col-sm-8">
                  <strong>{{model.address2}}</strong>
                </div>
                <div class="col-sm-4">
                  City
                </div>
                <div class="col-sm-8">
                  <strong>{{model.city}}</strong>
                </div>
                <div class="col-sm-4">
                  State
                </div>
                <div class="col-sm-8">
                  <strong>{{model.state}}</strong>
                </div>
                <div class="col-sm-4">
                  Zip
                </div>
                <div class="col-sm-8">
                  <strong>{{model.zip}}</strong>
                </div>
                <div class="col-sm-4">
                  Contact
                </div>
                <div class="col-sm-8">
                  <strong>{{model.contactName}}</strong>
                </div>
                <div class="col-sm-4">
                  Email
                </div>
                <div class="col-sm-8">
                  <strong>{{model.contactEmail}}</strong>
                </div>
                <div class="col-sm-4">
                  Phone
                </div>
                <div class="col-sm-8">
                  <strong>{{model.contactPhone}}</strong>
                </div>
                {{!-- <div class="col-sm-4">
                  Backup Email
                </div>
                <div class="col-sm-8">
                  <strong></strong>
                </div> --}}
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="row">
            <div class="col-lg-12">
              <div class="ibox float-e-margins">
                <div class="ibox-title">
                  <h5>Details</h5>
                </div>
                <div class="ibox-content">
                  <div class="row">
                    <div class="col-sm-4">
                      Budget
                    </div>
                    <div class="col-sm-8">
                      <strong>${{model.budget}}</strong>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="ibox float-e-margins">
                <div class="ibox-title">
                  <h5>Payment</h5>
                </div>
                <div class="ibox-content">
                  <div class="row">
                    <div class="col-sm-4">
                      Visa
                    </div>
                    <div class="col-sm-8">
                      <strong>******4356</strong>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="ibox float-e-margins">
            <div class="ibox-title">
              <h5>Campigns</h5>
            </div>
            <div class="ibox-content">
              <div class="row">
                {{#each campaignList as |item|}}
                <div class="col-sm-6">
                  {{item.name}}
                </div>
                <div class="col-sm-6">
                  <strong>{{item.data}}</strong>
                </div>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>