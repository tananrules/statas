<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-9">
    <h2>{{model.name}}</h2>
    {{bread-crumbs tagName="ol" outputStyle="bootstrap" linkable=true}}
  </div>
  {{#if model.hasDirtyAttributes}}
  <div class="col-lg-3">
    <div class="title-action">
      <a class="btn btn-primary"{{action 'updateClient' model on='click'}}>Update Client</a>
    </div>
  </div>
  {{/if}}
</div>


<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-md-4">
      <div id="nestable-menu">
        <h4><a>Active</a> | <a>Inactive</a> | <a>All</a></h4>
      </div>
    </div>
    <div class="col-md-4">
      <form>
        <input type="text" placeholder="Search Clients " class="form-control">
      </form>
    </div>
    <div class="col-md-4">
      <div class="btn-group pull-right">
        {{#link-to 'clients.index' tagName='button' class='btn btn-sm btn-default'}}Clients{{/link-to}}
        {{#link-to 'clients.campaigns' tagName='button' class='btn btn-sm btn-default'}}Campaigns{{/link-to}}
        {{#link-to 'clients.offers' tagName='button' class='btn btn-sm btn-default'}}Offers{{/link-to}}
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Info</h5>
          <h5 class="pull-right pointer"{{action 'editInfo' on='click'}}>{{fa-icon 'edit'}}</h5>
        </div>
        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-4">
              <h5>Advertiser</h5>
            </div>
            <div class="col-sm-8">
              {{#if infoIsEditing}}
                {{input class='form-control input-sm' value=model.name}}
              {{else}}
                {{model.name}}
              {{/if}}
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <h5>Address</h5>
            </div>
            <div class="col-sm-8">
              {{#if infoIsEditing}}
                {{input class='form-control input-sm' value=model.address}}
              {{else}}
                {{model.address}}
              {{/if}}
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <h5>Suite</h5>  
            </div>
            <div class="col-sm-8">
              {{#if infoIsEditing}}
                {{input class='form-control input-sm' value=model.address2}}
              {{else}}
                {{model.address2}}
              {{/if}}
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <h5>Suite</h5>
            </div>
            <div class="col-sm-8">
              {{#if infoIsEditing}}
                {{input class='form-control input-sm' value=model.city}}
              {{else}}
                {{model.city}}
              {{/if}}
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <h5>State</h5>
            </div>
            <div class="col-sm-8">
              {{#if infoIsEditing}}
                {{input class='form-control input-sm' value=model.state}}
              {{else}}
                {{model.state}}
              {{/if}}
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <h5>Zip</h5>
            </div>
            <div class="col-sm-8">
              {{#if infoIsEditing}}
                {{input class='form-control input-sm' value=model.zip}}
              {{else}}
                {{model.zip}}
              {{/if}}
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <h5>Contact</h5>
            </div>
            <div class="col-sm-8">
              {{#if infoIsEditing}}
                {{input class='form-control input-sm' value=model.contactName}}
              {{else}}
                {{model.contactName}}
              {{/if}}
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <h5>Email</h5>
            </div>
            <div class="col-sm-8">
              {{#if infoIsEditing}}
                {{input class='form-control input-sm' value=model.contactEmail}}
              {{else}}
                {{model.contactEmail}}
              {{/if}}
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <h5>Phone</h5>
            </div>
            <div class="col-sm-8">
              {{#if infoIsEditing}}
                {{input class='form-control input-sm' value=model.contactPhone}}
              {{else}}
                {{model.contactPhone}}
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="row">
        <div class="col-lg-12">
          <div class="ibox float-e-margins">
            <div class="ibox-title">
              <h5>Details</h5>
              <h5 class="pull-right pointer"{{action 'editDetails' on='click'}}>{{fa-icon 'edit'}}</h5>
            </div>
            <div class="ibox-content">
              <div class="row">
                <div class="col-sm-4">
                  <h5>Budget</h5>
                </div>
                <div class="col-sm-8">
                  {{#if detailsIsEditing}}
                    {{input class='form-control input-sm' value=model.budget placeholder='$'}}
                  {{else}}
                    ${{model.budget}}
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="ibox float-e-margins">
            <div class="ibox-title">
              <h5>Payment</h5>
            </div>
            <div class="ibox-content">
              <div class="row">
                <div class="col-sm-4">
                  Visa
                </div>
                <div class="col-sm-8">
                  <strong>******4356</strong>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Campaigns</h5>
        </div>
        <div class="ibox-content">
          {{#each campaignList as |item|}}
          <div class="row">
            <div class="col-sm-6">
              <h5>{{item.name}}</h5>
            </div>
            <div class="col-sm-6">
              {{item.data}}
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      {{campaigns-table-component
        model=campaigns
        title='Campaigns'
      }}
    </div>
  </div>
</div>