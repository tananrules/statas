<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content">
      <div class="row">
        <div class="col-lg-12 text-center">
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default {{if (eq activeFilter 'all') 'active'}}" {{action 'filterUsers' 'all'}}>All</button>
            <button type="button" class="btn btn-default {{if (eq activeFilter 'im') 'active'}}" {{action 'filterUsers' 'im'}}>Influence Manager</button>
            <button type="button" class="btn btn-default {{if (eq activeFilter 'am') 'active'}}" {{action 'filterUsers' 'am'}}>Account Manager</button>
            <button type="button" class="btn btn-default {{if (eq activeFilter 'ad') 'active'}}" {{action 'filterUsers' 'ad'}}>Account Director</button>
            <button type="button" class="btn btn-default {{if (eq activeFilter 'aa') 'active'}}" {{action 'filterUsers' 'aa'}}>Account Analysis</button>
            <button type="button" class="btn btn-default {{if (eq activeFilter 'id') 'active'}}" {{action 'filterUsers' 'id'}}>Influence Director</button>
            <button type="button" class="btn btn-default {{if (eq activeFilter 'et') 'active'}}" {{action 'filterUsers' 'et'}}>Executive Team</button>
            <button type="button" class="btn btn-default {{if (eq activeFilter 'sa') 'active'}}" {{action 'filterUsers' 'sa'}}>Super Admin</button>
          </div>
        </div>
          <br/><br/><br/>
        <div class="col-lg-12">
          <div class="ibox float-e-margins">
            <div class="ibox-title">
              <h5>Current Users</h5>
              <button type="button" class="btn btn-w-m btn-primary pull-right" data-toggle="modal" data-target="#addUserModal">Add User</button>
            </div>
            <div class="ibox-content">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>Active Rev</th>
                    <th>LTE</th>
                    <th>RP</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each model.users as |user index|}}
                  <tr>
                    <td>{{addOne index}}</td>
                    <td>{{user.name}}</td>
                    <td>{{user.type}}</td>
                    <td>{{user.active_rev}}</td>
                    <td>{{user.lte}}</td>
                    <td>{{user.rp}}</td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>    
        </div>
      </div>
    </div>
  </div>
</div>

{{outlet}}


<div id="addUserModal" class="modal fade" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-12">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h3 class="m-t-none m-b">ADD NEW USER </h3>
            <p>Create new user for Statas</p>
            <form role="form" {{action 'createNewUser' on='submit'}}>
              <div class="form-group"><label>First Name<span class="required"> *</span></label> 
                {{input class="form-control" value=form.firstName  required="true"}}
              </div>
              <div class="form-group"><label>Last Name <span class="required"> *</span></label> 
                {{input class="form-control" value=form.lastName  required="true"}}
              </div>
              <div class="form-group"><label>User Access <span class="required"> *</span></label> 
                {{#x-select value=selectedUserAccess action="selectUserAccess" class="form-control m-b"}}
                  {{#x-option value='im'}}Influence Manager{{/x-option}}
                  {{#x-option value='am'}}Account Manager{{/x-option}}
                  {{#x-option value='aa'}}Account Analysis{{/x-option}}
                  {{#x-option value='ad'}}Account Director{{/x-option}}
                  {{#x-option value='et'}}Exclusive Team{{/x-option}}
                  {{#x-option value='sa'}}Super Admin{{/x-option}}
                {{/x-select}}
              </div>
              <div class="form-group"><label>Team <span class="required"> *</span></label> 
                {{#x-select value=selectedTeam action="selectTeam" class="form-control m-b"}}
                  {{#x-option value='ad'}}Account Director{{/x-option}}
                  {{#x-option value='id'}}Influence Director{{/x-option}}
                {{/x-select}}
              </div>
              <div class="form-group"><label>Email <span class="required"> *</span></label> 
                {{input type="email" value=form.email class="form-control" required="true"}}
              </div>
              <div>
                <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>Create User</strong></button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>