<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-9">
    <h2>Clients</h2>
    <ol class="breadcrumb">
      <li>
        {{#link-to 'dashboard'}}Home{{/link-to}}
      </li>
      <li class="active">
        <strong>Clients</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-3">
    <div class="title-action">
      <button type="button" class="btn btn-w-m btn-primary pull-right" data-toggle="modal" data-target="#addClientModal">Add Client<span class="right">{{fa-icon 'angle-right'}}</span></button>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content">
      <div class="row">
        <div class="col-lg-4">
          <div>
            <h4><a>Active</a> | <a>Inactive</a> | <a>All</a></h4>
          </div>
        </div>
        <div class="col-lg-4">
          <form>
            <input type="text" placeholder="Search Clients " class="form-control">
          </form>
        </div>
        <div class="col-lg-4">
          <div class="btn-group pull-right">
            {{#link-to 'clients.index' tagName='button' class='btn btn-sm btn-default'}}Clients{{/link-to}}
            {{#link-to 'clients.campaigns' tagName='button' class='btn btn-sm btn-default'}}Campaigns{{/link-to}}
            {{#link-to 'clients.offers' tagName='button' class='btn btn-sm btn-default'}}Offers{{/link-to}}
          </div>
        </div>
          <br/><br/><br/>
        <div class="col-lg-12">
          <div class="ibox float-e-margins">
            <div class="ibox-title">
              <h5>All Clients</h5>
            </div>
            <div class="ibox-content">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Offers</th>
                    <th>Budget</th>
                    <th>Spent</th>
                    <th>Spend Left</th>
                    <th>Reach</th>
                    <th>Clicks</th>
                    <th>Goal</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each model as |client index|}}
                  <tr>
                    <td>{{addOne index}}</td>
                    {{#link-to 'clients.client' client tagName='td' classNames='pointer'}}{{client.name}}{{/link-to}}
                    <td>
                      {{#x-select value=client.status onchange=(action "updateStatus" client) class="form-control m-b input-sm imput-sm-padding" as |xs| }}
                        {{#xs.option value='active'}}Active{{/xs.option}}
                        {{#xs.option value='pause'}}Pause{{/xs.option}}
                        {{!-- {{#xs.option value='delete'}}Delete{{/xs.option}} --}}
                      {{/x-select}}
                    </td>
                    <td></td>
                    <td>{{client.budget}}</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{outlet}}

{{add-new-client-modal form=form store=store}}
{{add-new-campaign-modal form=form store=store}}
{{add-new-offer-modal form=form store=store}}

