<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-9">
    <h2>Clients</h2>
    <ol class="breadcrumb">
      <li>
        {{#link-to 'dashboard'}}Home{{/link-to}}
      </li>
      <li class="active">
        <strong>Clients</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-3">
    <div class="title-action">
      <button type="button" class="btn btn-w-m btn-primary pull-right">Add Client<span class="right">{{fa-icon 'angle-right'}}</span></button>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content">
      <div class="row">
        <div class="col-lg-12">
          <div class="btn-group" role="group">
            {{#link-to 'clients.campaigns' tagName='button' class='btn btn-w-m btn-default'}}Campaigns{{/link-to}}
            {{#link-to 'clients.offers' tagName='button' class='btn btn-w-m btn-default'}}Offers{{/link-to}}
          </div>
        </div>
          <br/><br/><br/>
        <div class="col-lg-6">
          {{top-offers-table-component model=model showActions=true}}
        </div>
      </div>
    </div>
  </div>
</div>

